<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_cat_detailed_img"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:scaleType="centerInside"
            android:src="@drawable/fruits" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_cat_detailed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/alice"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nav_cat_detailed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="20000 VNĐ"
                android:textColor="@color/LimeGreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nav_cat_detailed_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add_circle" />

                <TextView
                    android:id="@+id/nav_cat_detailed_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nav_cat_detailed_remove"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/remove_circle" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nav_cat_detailed_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="@string/add_to_cart"
                android:layout_margin="5dp"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:background="@drawable/btn_bg_detailed"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>